    <div class="loginBox">
        <img src=user.png class="user">
        <h3>Log In Here</h3>
        <form action="register" method="POST">
            <p>Email</p>
            <input type="text" name="logemail" placeholder="Enter the Email" required="true">
            <p>Password</p>
