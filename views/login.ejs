    <div class="signUpBox">
        <img src=user.png class="user">
        <h3>Registration</h3>
        <form action="register" method="POST">
            <p>First Name</p>
            <input type="text" name="firstname" placeholder="First name" required="true">
            <p>Last Name</p>
            <input type="text" name="lastname" placeholder="Last name" required="true">
            <p>Email</p>
            <input type="text" name="email" placeholder="Enter the Email" required="true">
            <p>Password</p>
            <input type="password" name="password" placeholder="*********" required="true">
            <p>Confirm Password</p>
            <input type="password" name="cpassword" placeholder="*********" required="true">
            <input type="submit" name="" onclick="regsuccess" value="Register">
            <p>Already have an account? </p>
            <a onClick="$('.signUpBox').hide(); $('.loginBox').show()">
                 Sign In Here
